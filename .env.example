# DB_READ_REPLICA_2_POOL_MIN=2
# DB_READ_REPLICA_2_SSL=false
# DB_READ_REPLICA_2_WEIGHT=1

# Load Balancing Strategy (round-robin, weighted, random)
DB_LOAD_BALANCING=round-robin

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=app:
REDIS_DEFAULT_TTL=3600

# Application
NODE_ENV=development
LOG_LEVEL=debug
