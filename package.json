{
  "name": "@rohit_patil/db-core",
  "version": "1.0.0",
  "description": "Core database layer with PostgreSQL and Redis caching for microservices",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build",
    "migrate:up": "node dist/cli/migrate.js up",
    "migrate:down": "node dist/cli/migrate.js down",
    "migrate:create": "node dist/cli/migrate.js create",
    "publish": "npm publish --access public"
  },
  "keywords": [
    "database",
    "postgresql",
    "redis",
    "cache",
    "orm",
    "query-builder",
    "microservices",
    "typescript"
  ],
  "author": "Rohit Patil",
  "license": "MIT",
  "dependencies": {
    "pg": "^8.11.3",
    "redis": "^4.6.12",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "pg": "^8.11.0",
    "redis": "^4.6.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "directories": {
    "example": "examples"
  }
}
